<h1 align="center">Login</h1>

<%= form_for :session, html: {class: "form-horizontal", role: "form"} do |f| %>
	<div class="form-group">
		<%= f.label :email, class: "col-sm-2 control-label" %>
		<div class="col-sm-8">
			<%= f.email_field :email, class: "form-control", 
					placeholder: "Enter Email", autofocus: true %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :password, class: "col-sm-2 control-label" %>
		<div class="col-sm-8">
			<%= f.password_field :password, class: "form-control", autocomplete: "off" %>
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<%= f.submit "Login", class:"btn btn-primary btn-lg" %>
		</div>
	</div>
<% end %>

<div class="col-sm-offset-2 col-sm-4 back-to-articles">
	[ <%= link_to "Cancel request and Return to All Articles", articles_path %> ]
</div>

